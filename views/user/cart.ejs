    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-bordered text-center mb-0">
                    <thead class="bg-secondary text-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        <% if (cart && cart.products.length> 0) { %>
                            <% for (let i=0; i < cart.products.length; i++) { %>
                                <tr>
                                    <td class="align-middle">
                                        <a href="/product/<%= cart.products[i].products._id %>">
                                            <img src="/productImages/<%= cart.products[i].products.image[0] %>" alt=""
                                                style="width: 50px;">
                                            <%= cart.products[i].products.name %>
                                        </a>
                                    </td>
                                    <td class="align-middle">&#8377 <%= cart.products[i].price %>
                                    </td>
                                    <td class="align-middle">
                                        <div class="input-group quantity mx-auto" style="width: 100px;">
                                            <div class="input-group-btn">
                                                <button class="btn btn-sm btn-primary btn-plus" id="minus-<%= cart.products[i].products._id %>" data-id="<%= cart.products[i].products._id %>" data-action="minus" >
                                                   -
                                                </button>
                                            </div>
                                            <p  type="text" class="form-control form-control-sm bg-secondary text-center quantity-input" id="<%= cart.products[i].products._id %>"><%= cart.products[i].quantity %></p>  
                                                                                                                                                     
                                            <div class="input-group-btn">

                                                <button class="btn btn-sm btn-primary btn-plus"  data-id="<%= cart.products[i].products._id %>" data-action="plus">
                                                    +
                                                </button>       
 
                                            </div>
                                            <span id="stock-<%= cart.products[i].products._id %>" class=" text-danger pt-3 "></span>

                                        </div>
                                    </td>


                                    
                                    <td class="align-middle" id="total-price-<%= cart.products[i].products._id %>">
                                        &#8377 <%= cart.products[i].price * cart.products[i].quantity %>
                                    </td>
                                    <td class="align-middle">
                                        <form action="/removeProduct/<%= cart.products[i].products._id %>" method="post"> 
                                            <button class="btn btn-sm btn-primary btn-remove">
                                                <i class="fa fa-times"></i>
                                            </button>
                                        </form>
                                       
                                                
                                    </td>
                                </tr>
                                <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="align-middle text-center">
                                                <p class="text-muted">Your cart is empty</p>
                                            </td>
                                        </tr>
                                        <% } %>
                    </tbody>

                </table>
            </div>
            <div class="col-lg-4">
                <% if (cart && cart.products.length> 0) { %>
                    <form class="mb-5" action="">
                        <div class="input-group">
                            <input type="text" class="form-control p-4" placeholder="Coupon Code">
                            <div class="input-group-append">
                                <button class="btn btn-primary">Apply Coupon</button>
                            </div>
                        </div>
                    </form>
                    <div class="card border-secondary mb-5">
                        <div class="card-header bg-secondary border-0">
                            <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3 pt-1">
                                <h6 class="font-weight-medium">Subtotal</h6>
                                <h6 class="font-weight-medium">&#8377 <%= cart.total %>
                                </h6> <!-- Display cart total -->
                            </div>
                            <div class="d-flex justify-content-between">
                                <!-- <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6> -->
                            </div>
                        </div>
                        <div class="card-footer border-secondary bg-transparent">
                            <div class="d-flex justify-content-between mt-2">
                                <h5 class="font-weight-bold">Total</h5>
                                <h5 class="font-weight-bold" id="cart-total">&#8377 <%= cart.total %>
                                </h5> <!-- Display cart total -->
                            </div>
                         <a href="/checkOut" style="text-decoration: none;" >
                            <button class="btn btn-block btn-primary my-3 py-3" id="checkout-button">Proceed To Checkout</button>
                         <a>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>

    <script>
        $(document).on("click",".btn-plus",function(){
            var plus=$(this).data('id')
            $('.btn-plus #pid').val(plus)
        })
    </script>