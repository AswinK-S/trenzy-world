    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Our Shop</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="/">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Shop</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Shop Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-12">
                <!-- Price Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
                    <form method="GET">
                        <!-- <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" id="price-all" name="price-all" checked disabled>
                            <label class="custom-control-label" for="price-all">&#8377 All Price</label>
                            <span class="badge border font-weight-normal">#</span>
                        </div> -->
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" id="price-1" name="price" value="1000">
                            <label class="custom-control-label" for="price-1">&#8377 0 - &#8377 1000</label>
                            <span class="badge border font-weight-normal">#</span>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" id="price-2" name="price" value="2000">
                            <label class="custom-control-label" for="price-2">&#8377 1001 - &#8377 2000</label>
                            <span class="badge border font-weight-normal">#</span>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" name="price" id="price-3" class="custom-control-input" value="3000">
                            <label class="custom-control-label" for="price-3">&#8377 2001 - &#8377 3000</label>
                            <span class="badge border font-weight-normal">#</span>
                        </div>

                        <input type="text" name="search" value="<%=queryString%> " hidden>
                        <!-- Add unique id and name attributes for the remaining checkboxes -->
                        
                        <button type="submit">Filter</button>
                    </form>
                    
                    
                    
                </div>
                <!-- Price End -->
                

        



                <!-- Size Start -->
                
                <!-- Size End -->


            </div>
            <!-- Shop Sidebar End -->


            <!-- Shop Product Start -->
            <div class="col-lg-9 col-md-12">
                <div class="row pb-3">
                    <div class="col-12 pb-1">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <form>
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" placeholder="Search by name,category">
                                    <div class="input-group-append">
                                        <span class="input-group-text bg-transparent text-primary">
                                            <button><i class="fa fa-search"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </form>
                            <div class="dropdown ml-4">
                                <button class="btn border dropdown-toggle" type="button" name="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Sort by
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                                    <a class="dropdown-item" href="#">high to low</a>
                                    <a class="dropdown-item" href="#">low to high</a>
                                </div>
                            </div>
                            
                        </div>
                    </div>

                    <% for (let i = 0; i < product.length; i++) { %>
                        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                               <a href="/product/<%=product[i]._id  %>"> <img class="img-fluid w-100" src="/productImages/<%= product[i].image[0] %>" alt="">
                               </a>
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3"><%= product[i].name %></h6>
                                <div class="d-flex justify-content-center">
                                    <h6>&#8377 <%= product[i].price %></h6>
                                    <h6 class="text-muted ml-2"><del></del></h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                                <form action="/cart" >
                                    <button type="submit" class="btn btn-sm text-primary p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</button>
                                </form>
                            </div>
                            
                        </div>
                    </div>
                    <% } %>
                </div>
                
                <div class="col-12 pb-1">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-3">
                            <% if (page > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/shop?page=<%= page - 1 %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <% } %>
                            <% for (let currentPage = 1; currentPage <= totalPages; currentPage++) { %>
                                <li class="page-item <%= page == currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="/shop?page=<%= currentPage %>"><%= currentPage %></a>
                                </li>
                            <% } %>
                            <% if (page < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/shop?page=<%= page + 1 %>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
                
            </div>
            
            <!-- Shop Product End -->
        </div>
    </div>
    <!-- Shop End -->

<%- include('../partials/footer.ejs') %>