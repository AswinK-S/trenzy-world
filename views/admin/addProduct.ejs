<%- include('./adminLogHeader.ejs') %>

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-lg-12 col-xl-7">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4 text-primary">Add Product</h6>
                    <form action="/admin/adminProduct/addProduct" method="post" id="add-product" enctype="multipart/form-data">

                        <div>
                            <label for="formFileLg" class="form-label text-primary">Select 4 images</label>

                            <small style="color: red;" id="productError"></small>

                            <input class="form-control form-control-md" id="formFileLg" name="image" type="file"
                                accept="image/*" multiple required>
                                <% if (typeof imageCountMessage !== 'undefined') { %>
                                    <div class="alert alert-danger mt-2"><%= imageCountMessage %></div>
                                <% } %>
                        </div>


                        <div class="mt-3 mb-3">
                            <label for="addprod">Name</label>
                            <input class="form-control mb-3" type="text" id="addprod" name="name"
                                placeholder="Enter the name" aria-label="default input example" required>
                                <small style="color: red;" id="productError"></small>
                        </div>



                        <div>
                            <label for="">Category</label>
                            <select class="form-select" aria-label="Default select example" id="category"
                                name="category">

                                <option selected>Select category from below</option>

                                <% if(category.length>0){%>
                                    <% for(let i=0;i<category.length;i++){ %>

                                        <option id="<%=category[i]._id  %>" name="<%=category[i]._id  %>">
                                            <%= category[i].name %>
                                        </option>

                                        <% } %>
                                            <% } else{ %>
                                                <option value="">No categories</option>
                                                <% } %>
                            </select>
                        </div>

                        <div class="mt-3 mb-3">
                            <label for="addProdCat">Brand</label>
                            <input class="form-control mb-3" type="text" id="addProdCat" name="brand"
                                placeholder="Enter the brand" aria-label="default input example" required>
                                <small style="color: red;" id="productError"></small>
                        </div>

                        <div class="mt-3 mb-3">
                            <label for="addPrice">Price</label>
                            <input class="form-control mb-3" type="number" id="addPrice" name="price"
                                placeholder="Enter the price" aria-label="default input example" required>
                                <small style="color: red;" id="productError"></small>
                        </div>
                        <div class="mt-3 mb-3">
                            <label for="addQuantity">Quantity</label>
                            <input class="form-control mb-3" type="number" id="addQuantity" name="quantity"
                                placeholder=" Enter the Quantity" aria-label="default input example" required>
                                <small style="color: red;" id="productError"></small>
                        </div>

                        <div class="mt-3 mb-3">
                            <label for="addoffer">Offer</label>
                            <input class="form-control mb-3" type="number" id="addOffer" name="offer"
                                placeholder="Enter the offer / by default it will be zero " aria-label="default input example" required>
                                <small style="color: red;" id="productError"></small>
                        </div>

                        <div class="mt-3 mb-3">
                            <label for="date">Expiry Date</label>
                            <input placeholder="Select date" type="date" id="date" name="date" class="form-control">
                            <small style="color: red;" id="productError"></small>
                        </div>

                        <!-- <div class="mt-3 mb-3">
                            <label for="addDiscount">Discount Price</label>
                            <input class="form-control mb-3" type="number" id="addDiscount" name="discount"
                                placeholder="" aria-label="default input example" required>
                        </div> -->

                        <div class="mt-3 mb-3">
                            <label for="selectSize">Size</label>
                            <select class="form-select" id="selectSize" name="size">
                                <option value="default" selected>select size</option>
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                                <option value="XL">XL</option>
                            </select>
                        </div>

                        <div class="mt-3 mb-3">
                            <label for="product_description">Product Description:</label>
                            <textarea class="form-control form-control-lg" id="product_description" name="description"
                                required></textarea>
                        </div>

                        <button onclick="return addProduct()" type="submit" class="btn btn-primary">Add Product</button>

                    </form>

                </div>
            </div>
        </div>

        <%- include('./adminLogFooter.ejs') %>